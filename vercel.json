{
  "version": 2,
  "name": "my-project",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/index.html",
      "config": {
        "distDir": "frontend/dist"
      }
    },
    {
      "src": "backend/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ]
}
